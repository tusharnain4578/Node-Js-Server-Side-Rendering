<%- include('partials/header') %>

    <section class="section">
        <div class="container">
            <h1 class="title">Contact Us</h1>
            <p class="subtitle">Get in touch with us</p>

            <div class="columns">
                <div class="column is-half">
                    <form>
                        <div class="field">
                            <label class="label">Your Name</label>
                            <div class="control">
                                <input class="input" type="text" placeholder="Enter your name">
                            </div>
                        </div>

                        <div class="field">
                            <label class="label">Email Address</label>
                            <div class="control">
                                <input class="input" type="email" placeholder="Enter your email">
                            </div>
                        </div>

                        <div class="field">
                            <label class="label">Message</label>
                            <div class="control">
                                <textarea class="textarea" placeholder="Enter your message"></textarea>
                            </div>
                        </div>

                        <div class="field">
                            <div class="control">
                                <button class="button is-primary" type="button">Send Message</button>
                            </div>
                        </div>
                    </form>
                </div>

                <div class="column is-half">
                    <div class="content">
                        <h2>Contact Information</h2>
                        <p>
                            You can reach us at the following contact details:
                        </p>
                        <ul>
                            <li>Email: contact@yourwebsite.com</li>
                            <li>Phone: +1 123-456-7890</li>
                            <li>Address: 1234 Main Street, City, Country</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <%- include('partials/footer') %>